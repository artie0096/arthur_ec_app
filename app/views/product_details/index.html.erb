<p id="notice"><%= notice %></p>

<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Size</th>
      <th>Weight</th>
      <th>Regular price</th>
      <th>Selling price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.color %></td>
        <td><%= product_detail.size %></td>
        <td><%= product_detail.weight %></td>
        <td><%= product_detail.regular_price %></td>
        <td><%= product_detail.selling_price %></td>
        <td><%= product_detail.stock_quantity %></td>
        <td><%= link_to 'Show', product_detail %></td>
        <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
        <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

