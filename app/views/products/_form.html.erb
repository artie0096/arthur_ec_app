<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name %>
  </div>

  <div class="field">
    <%= form.label :origin_country %>
    <%= form.text_field :origin_country %>
  </div>

  <div class="field">
    <%= form.label :delivery_require_day %>
    <%= form.number_field :delivery_require_day %>
  </div>

  <div class="field">
  
    <%= form.label :supplier_id %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :name,  :prompt => "選択してください" %>
 
  </div>

  <div>
    <%= form.label :tag %>
    <%= form.collection_select(:tag_ids, Tag.all, :id, :label, {}, {class: "searchable", multiple: "multiple"}) %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.collection_select(:category_ids, Category.all, :id, :name, {}, {class: "searchable", multiple: "multiple"}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

 
