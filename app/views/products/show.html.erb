<p id="notice"><%= notice %></p>

<p>
  <strong>Product name:</strong>
  <%= @product.product_name %>
</p>

<p>
  <strong>Origin country:</strong>
  <%= @product.origin_country %>
</p>

<p>
  <strong>Delivery require day:</strong>
  <%= @product.delivery_require_day %>
</p>

<p>
  <strong>Supplier:</strong>
  <%= @product.supplier.name %>
</p>

<p>
  <strong>Tags:</strong>
  <% @product.product_tags.each do |product_tag| %>
  <%= product_tag.tag.label %>
  <% end %>
</p>

<p>
  <strong>Categories:</strong>
  <% @product.product_categories.each do |product_category| %>
  <%= product_category.category.name %>
  <% end %>
</p>

<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Size</th>
      <th>Weight</th>
      <th>Regular price</th>
      <th>Selling price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
      <th>Product Image</th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.color %></td>
        <td><%= product_detail.size %></td>
        <td><%= product_detail.weight %></td>
        <td><%= product_detail.regular_price %></td>
        <td><%= product_detail.selling_price %></td>
        <td><%= product_detail.stock_quantity %></td>
        
        <td><%= link_to 'Show', "product_details/" + product_detail.id.to_s %></td>
        <td><%= link_to 'Edit', "product_details/" + product_detail.id.to_s + "/edit" %></td>
        <td><%= link_to 'Destroy', "", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




